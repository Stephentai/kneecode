<script>


function getRadioVal(form, name) {
    var val;
    // get list of radio buttons with specified name
    var radios = form.elements[name];
    
    // loop through list of radio buttons
    for (var i=0, len=radios.length; i<len; i++) {
        if ( radios[i].checked ) { // radio checked?
            val = radios[i].value; // if so, hold its value in val
            break; // and break out of for loop
        }
    }
    return val; // return value of checked radio or undefined if none checked
}


function questionsResult(){
var q1 = getRadioVal( document.getElementById('myform'), 'q1' );
var q2 = getRadioVal( document.getElementById('myform'), 'q2' );
var q3 = getRadioVal( document.getElementById('myform'), 'q3' );
var q4 = getRadioVal( document.getElementById('myform'), 'q4' );
var q5 = getRadioVal( document.getElementById('myform'), 'q5' );
var q6 = getRadioVal( document.getElementById('myform'), 'q6' );
var q7 = getRadioVal( document.getElementById('myform'), 'q7' );
var q8 = getRadioVal( document.getElementById('myform'), 'q8' );
var q9 = getRadioVal( document.getElementById('myform'), 'q9' );
var q10 = getRadioVal( document.getElementById('myform'), 'q10' );
var q11 = getRadioVal( document.getElementById('myform'), 'q11' );
var q12 = getRadioVal( document.getElementById('myform'), 'q12' );


if (parseInt(q1)>0){ q1 = parseInt(q1); } else { q1 = 1; }
if (parseInt(q2)>0){ q2 = parseInt(q2); } else { q2 = 1; }
if (parseInt(q3)>0){ q3 = parseInt(q3); } else { q3 = 1; }
if (parseInt(q4)>0){ q4 = parseInt(q4); } else { q4 = 1; }
if (parseInt(q5)>0){ q5 = parseInt(q5); } else { q5 = 1; }
if (parseInt(q6)>0){ q6 = parseInt(q6); } else { q6 = 1; }
if (parseInt(q7)>0){ q7 = parseInt(q7); } else { q7 = 1; }
if (parseInt(q8)>0){ q8 = parseInt(q8); } else { q8 = 1; }
if (parseInt(q9)>0){ q9 = parseInt(q9); } else { q9 = 1; }
if (parseInt(q10)>0){ q10 = parseInt(q10); } else { q10 = 1; }
if (parseInt(q11)>0){ q11 = parseInt(q11); } else { q11 = 1; }
if (parseInt(q12)>0){ q12 = parseInt(q12); } else { q12 = 1; }


d1 = document.getElementById("questions");
d2 = document.getElementById("theResult");
   
d1.style.display = "none";
d2.style.display = "block";


document.getElementById("calcResult").innerHTML = "<h1>Your score is "  + ( parseInt(60)-(q1+q2+q3+q4+q5+q6+q7+q8+q9+q10+q11+q12) ) + "</h1>";

scroll(0,0);

}



function redoQuestions(){

d1 = document.getElementById("questions");
d2 = document.getElementById("theResult");
   
